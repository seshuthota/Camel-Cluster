# Apache Camel Cluster Environment Configuration

# Database Configuration
POSTGRES_DB=camel_cluster
POSTGRES_USER=camel_user
POSTGRES_PASSWORD=camel_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ActiveMQ Configuration
ACTIVEMQ_HOST=activemq
ACTIVEMQ_PORT=61616
ACTIVEMQ_USER=admin
ACTIVEMQ_PASSWORD=admin

# Application Ports
PRODUCER_PORT=8081
CONSUMER_PORT=8082
COORDINATOR_PORT=8083
NGINX_PORT=80

# Hazelcast Configuration
HAZELCAST_GROUP_NAME=camel-cluster
HAZELCAST_GROUP_PASSWORD=camel-cluster-pass

# JVM Configuration
PRODUCER_JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC
CONSUMER_JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
COORDINATOR_JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN

# File Processing Configuration
SHARED_DATA_PATH=./shared-data

# Cluster Configuration
CLUSTER_NAME=camel-cluster
CLUSTER_DISCOVERY_TIMEOUT=30000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Network Configuration
NETWORK_NAME=camel-cluster-network 